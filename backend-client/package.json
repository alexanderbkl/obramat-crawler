{
  "name": "ecommerce-backend-client",
  "version": "1.0.0",
  "description": "E-commerce backend API with JWT auth, cart, orders, and Stripe integration",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "db:generate": "prisma generate",
